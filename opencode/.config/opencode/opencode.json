{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "model": "opencode/grok-code",
  "disabled_providers": [
    "openai",
    "gemini"
  ],
  "provider": {
    "zhipuai": {
      "api": "https://api.z.ai/api/coding/paas/v4"
    },
  },
  "autoshare": false,
  "autoupdate": true,
  "mcp": {
    "perplexity": {
      "environment": {
        "PERPLEXITY_MODEL": "sonar-pro"
      },
      "type": "local",
      "command": [
        "npx",
        "perplexity-mcp"
      ],
      "enabled": true
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true
    },
    "zai-mcp-server": {
      "type": "local",
      "command": ["npx", "-y", "@z_ai/mcp-server"],
      "environment": {
        "Z_AI_API_KEY": "{env:ANTHROPIC_API_KEY}",
        "Z_AI_MODE": "ZAI"
      },
      "enabled": true
    },
    "web-search-prime": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/web_search_prime/mcp",
      "headers": {
        "Authorization": "{env:ANTHROPIC_API_KEY}"
      },
      "enabled": true
    },
    "web-reader": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/web_reader/mcp",
      "headers": {
        "Authorization": "{env:ANTHROPIC_API_KEY}"
      },
      "enabled": true
    }
  },
  "keybinds": {
    "session_list": "<leader>l",
    "leader": "alt+n",
    "app_exit": "ctrl+c,<leader>q",
    "session_share": "<leader>s",
    "input_submit": "enter",
    "input_paste": "ctrl+v",
    "input_clear": "ctrl+c",
    "session_interrupt": "esc",
    "session_compact": "<leader>c",
    "model_list": "<leader>m",
    "theme_list": "<leader>t",
    "editor_open": "<leader>e",
    "session_new": "<leader>n",
    "messages_half_page_down": "ctrl+alt+j",
    "messages_half_page_up": "ctrl+alt+k"
  }
}
