{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "model": "zai-coding-plan/glm-4.7",
  "disabled_providers": [
    "gemini"
  ],
  "provider": {
    "zhipuai": {
      "api": "https://api.z.ai/api/coding/paas/v4"
    }
  },
  "autoshare": false,
  "autoupdate": true,
  "mcp": {
    "perplexity": {
      "environment": {
        "PERPLEXITY_MODEL": "sonar-pro"
      },
      "type": "local",
      "command": [
        "npx",
        "perplexity-mcp"
      ],
      "enabled": true
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true
    },
    "zai-mcp-server": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@z_ai/mcp-server"
      ],
      "environment": {
        "Z_AI_API_KEY": "{env:ANTHROPIC_AUTH_TOKEN}",
        "Z_AI_MODE": "ZAI"
      },
      "enabled": true
    },
    "web-search-prime": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/web_search_prime/mcp",
      "headers": {
        "Authorization": "{env:ANTHROPIC_AUTH_TOKEN}"
      },
      "enabled": true
    },
    "web-reader": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/web_reader/mcp",
      "headers": {
        "Authorization": "{env:ANTHROPIC_AUTH_TOKEN}"
      },
      "enabled": true
    }
  },
  "keybinds": {
    "session_list": "<leader>s",
    "leader": "alt+n",
    "app_exit": "ctrl+c,<leader>q",
    "input_submit": "enter",
    "input_paste": "ctrl+v",
    "input_clear": "ctrl+c",
    "session_interrupt": "esc",
    "session_compact": "<leader>c",
    "model_list": "<leader>m",
    "theme_list": "<leader>t",
    "editor_open": "<leader>e",
    "session_new": "<leader>n",
    "messages_half_page_down": "shift+alt+j",
    "messages_half_page_up": "shift+alt+k"
  }
}
